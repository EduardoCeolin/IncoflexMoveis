<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    tools:context=".SobreEmpresa"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="0dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/sobreaempresa"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="A Incoflex atua no ramo moveleiro desde de 2004, com o compromisso de toda sua equipe em atender as necessidades de seus clientes, preservando a natureza mediante o cumprimento da legislação ambiental, e promovendo o bem estar social. Temos como objetivo a melhoria continua da gestão de processos e do nível de produtividade."
                android:textColor="@android:color/background_dark"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="3008dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="362dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="362dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/inco" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Em 2012 A Incoflex amplia a estrutura física da empresa e se instala em novo endereço, na Rodovia PR-444, Km 7,6."
                android:textColor="@android:color/background_dark"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="3008dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="150dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="150dp" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/barracao_incoflex" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Em 2013 a Incoflex inaugurou seu novo Show Room, com estrutura mais ampla, para acomodar os clientes nacionais e internacionais que visitam a fábrica, e conhecer de perto a qualidade e modernidade todas as suas linhas de produtos para Escritório e Expositores."
                android:textColor="@android:color/background_dark"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="3008dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="475dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="475dp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/fachada_incoflex" />

            <Button
                android:id="@+id/BOTAO_VIDEO_EMPRESA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:text="VÍDEO SOBRE A EMPRESA"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:padding="10dp"
                android:text="Com três certificações importantes no ano de 2014, a empresa se qualifica ainda mais para atender as necessidades dos clientes, respeitando o meio ambiente. Além na Norma NBR ISO 9001:2008, a Incoflex foi qualificada também com o ECOselo, como empresa Ambientalmente Responsável do Pólo Moveleiro de Arapongas-PR, e a Certificação Florestal FSC, que identifica e qualifica produtos originados através do bom e correto manejo florestal."
                android:textColor="@android:color/background_dark"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="3008dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="748dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="748dp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
